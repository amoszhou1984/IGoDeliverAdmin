@model IGoDeliverAdmin.Models.Dish

@{
    ViewBag.Title = "Create";
}

<h2>添加菜品</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Dish</legend>
        <div>@Html.HiddenFor(model => model.RestaurantId, new { @Value = ViewBag.RestaurantId })</div>

        <div class="editor-label">
            菜品
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            价格
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            有效起始
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartTime)
            @Html.ValidationMessageFor(model => model.StartTime)
        </div>

        <div class="editor-label">
            有效结束
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndTime)
            @Html.ValidationMessageFor(model => model.EndTime)
        </div>

        <div class="editor-label">
            辣度
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Spiciness)
            @Html.ValidationMessageFor(model => model.Spiciness)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("返回餐馆编辑", "Edit", "Restaurant", new { id = ViewBag.RestaurantId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
